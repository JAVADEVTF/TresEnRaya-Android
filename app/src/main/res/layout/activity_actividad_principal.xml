<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ActividadPrincipal">

    TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:rowCount="3"
        android:columnCount="3"
        android:id="@+id/gridLayout">

        <ImageButton
            android:layout_width="87dp"
            android:layout_height="106dp"
            android:id="@+id/imageButton00"
            android:layout_row="0"
            android:layout_column="0"
            android:tag="00"
            android:onClick="pulsadoBoton"/>

        <ImageButton
            android:layout_width="87dp"
            android:layout_height="106dp"
            android:id="@+id/imageButton01"
            android:layout_row="0"
            android:layout_column="1"
            android:tag="01"
            android:onClick="pulsadoBoton"/>

        <ImageButton
            android:layout_width="87dp"
            android:layout_height="106dp"
            android:id="@+id/imageButton02"
            android:layout_row="0"
            android:layout_column="2"
            android:tag="02"
            android:onClick="pulsadoBoton"/>

        <ImageButton
            android:layout_width="87dp"
            android:layout_height="106dp"
            android:id="@+id/imageButton10"
            android:layout_row="1"
            android:layout_column="0"
            android:tag="10"
            android:onClick="pulsadoBoton"/>

        <ImageButton
            android:layout_width="87dp"
            android:layout_height="106dp"
            android:id="@+id/imageButton11"
            android:layout_row="1"
            android:layout_column="1"
            android:tag="11"
            android:onClick="pulsadoBoton"/>

        <ImageButton
            android:layout_width="87dp"
            android:layout_height="106dp"
            android:id="@+id/imageButton12"
            android:layout_row="1"
            android:layout_column="2"
            android:tag="12"
            android:onClick="pulsadoBoton"/>

        <ImageButton
            android:layout_width="87dp"
            android:layout_height="106dp"
            android:id="@+id/imageButton20"
            android:layout_row="2"
            android:layout_column="0"
            android:tag="20"
            android:onClick="pulsadoBoton"/>

        <ImageButton
            android:layout_width="87dp"
            android:layout_height="106dp"
            android:id="@+id/imageButton21"
            android:layout_row="2"
            android:layout_column="1"
            android:tag="21"
            android:onClick="pulsadoBoton"/>

        <ImageButton
            android:layout_width="87dp"
            android:layout_height="106dp"
            android:id="@+id/imageButton22"
            android:layout_row="2"
            android:layout_column="2"
            android:tag="22"
            android:onClick="pulsadoBoton"/>
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nueva Partida."
        android:id="@+id/textViewMensaje"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gridLayout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nueva Partida"
        android:id="@+id/btn_jugar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="nuevaPartida"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurar"
        android:id="@+id/btn_config"
        android:layout_alignTop="@+id/btn_jugar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="configurar" />
</RelativeLayout>
